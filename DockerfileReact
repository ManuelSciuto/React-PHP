#https://github.com/letnull19A/nginx_vite_react_docker/blob/main/Dockerfile
FROM node as vite-app

WORKDIR /app/React

COPY ./React .

RUN npm install

RUN npm run build

FROM nginx:latest

WORKDIR /usr/share/nginx/

RUN rm -rf html
RUN mkdir html

COPY --from=vite-app /app/React/dist /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

ENTRYPOINT ["nginx", "-g", "daemon off;"]
